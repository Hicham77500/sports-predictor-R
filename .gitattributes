# Auto detect text files and normalize line endings to LF
* text=auto

# R files
*.R text eol=lf
*.Rmd text eol=lf
*.r text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Data files
*.csv text eol=lf
*.json text eol=lf

# Binary files
*.rds binary
*.RData binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary

# Git ignore
.gitignore text eol=lf
.gitattributes text eol=lf
